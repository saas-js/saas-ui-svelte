{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"strictNullChecks": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"jsx": "preserve",
		"paths": {
			"$saas": ["../../packages/saas-svelte"],
			"$saas/*": ["../../packages/saas-svelte/*"],
			"$wrappers": ["../storybook/stories/wrappers"],
			"$wrappers/*": ["../storybook/stories/wrappers/*"],
			"$stories": ["../storybook/stories"],
			"$stories/*": ["../storybook/stories/*"],
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
