{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"jsx": "preserve",
		"paths": {
			"$saas": ["../../packages/saas-svelte"],
			"$saas/*": ["../../packages/saas-svelte/*"],
			"$wrappers": ["../storybook/stories/wrappers"],
			"$wrappers/*": ["../storybook/stories/wrappers/*"],
			"$stories": ["../storybook/stories"],
			"$stories/*": ["../storybook/stories/*"],
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["src/**/*", ".astro/types.d.ts"],
	"exclude": ["node_modules", "dist"]
}
