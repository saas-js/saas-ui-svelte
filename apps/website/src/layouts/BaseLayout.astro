---
import "@fontsource-variable/inter";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "SaaS UI Svelte Documentation" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title} | SaaS UI Svelte</title>
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
	</head>
	<body
		class="min-h-screen font-sans antialiased bg-bg-default text-fg-default"
	>
		<header class="border-b border-border-default">
			<nav
				class="flex items-center justify-between px-4 py-4 mx-auto max-w-7xl"
			>
				<a href={`${base}`} class="text-xl font-bold">SaaS UI Svelte</a>
				<div class="flex gap-6">
					<a
						href={`${base}docs/components/button`}
						class="transition-colors hover:text-accent-fg"
						>Components</a
					>
					<a
						href="https://github.com/saas-js/saas-ui-svelte"
						class="transition-colors hover:text-accent-fg">GitHub</a
					>
				</div>
			</nav>
		</header>

		<main id="main">
			<slot />
		</main>

		<footer class="mt-20 border-t border-border-default">
			<div
				class="px-4 py-8 mx-auto text-sm text-center max-w-7xl text-fg-muted"
			>
				<p>
					&copy; {new Date().getFullYear()} SaaS UI. All rights reserved.
				</p>
			</div>
		</footer>
	</body>
</html>
