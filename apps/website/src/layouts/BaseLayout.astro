---
import "@fontsource-variable/inter";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "SaaS UI Svelte Documentation" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title} | SaaS UI Svelte</title>
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
	</head>
	<body class="bg-bg-default text-fg-default min-h-screen font-sans antialiased">
		<header class="border-b border-border-default">
			<nav class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
				<a href={`${base}`} class="text-xl font-bold">SaaS UI Svelte</a>
				<div class="flex gap-6">
					<a href={`${base}docs/components/button`} class="hover:text-accent-fg transition-colors">Components</a>
					<a href="https://github.com/saas-js/saas-ui-svelte" class="hover:text-accent-fg transition-colors">GitHub</a>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer class="border-t border-border-default mt-20">
			<div class="max-w-7xl mx-auto px-4 py-8 text-center text-sm text-fg-muted">
				<p>&copy; {new Date().getFullYear()} SaaS UI. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
