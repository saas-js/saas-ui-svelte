---
import Layout from "../../layouts/Layout.astro";
import DocsLayout from "../../components/docs/DocsLayout.svelte";
import DocsIntroduction from "../../components/docs/DocsIntroduction.svelte";

const base = import.meta.env.BASE_URL || "";

const tocItems = [
	{ label: "Features", href: "#features", level: 1 },
	{ label: "Sponsors", href: "#sponsors", level: 1 },
	{ label: "Acknowledgements", href: "#acknowledgements", level: 1 },
];
---

<Layout title="Introduction">
	<DocsLayout
		currentPath={`${base}/docs`}
		tocItems={tocItems}
		githubUrl="https://github.com/saas-js/saas-ui-svelte"
		base={base}
		client:load
	>
		<DocsIntroduction client:load />
	</DocsLayout>
</Layout>
