{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"strictNullChecks": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"paths": {
			"$saas": ["."],
			"$saas/*": ["./*"]
		}
	},
	"include": ["**/*.ts", "**/*.svelte"],
	"exclude": ["node_modules"]
}
